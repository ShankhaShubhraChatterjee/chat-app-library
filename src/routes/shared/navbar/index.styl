.navbar
    background-color rgba(11, 11, 11, 0.807)
    backdrop-filter blur(5px)
    display flex
    overflow hidden
    justify-content space-between
    align-items center
    padding 10px 0
    font-family Lato, monospace

.navbar__header
    font-weight bolder
    margin-left 10px
    font-size larger

.navbar__list
    display flex
    flex-direction row
    align-items center

.navbar__list--item
    list-style none

.navbar__list--item--link
    text-decoration none
    display inline-block
    padding 10px
    background red
    margin 0 5px
    border-radius 20px
