.chat__message--container
  color white
  height calc(100vh - 110px)
  width 100%
  font-family Lato, sans-serif
  font-weight normal
  position relative
  padding 5px
  // background linear-gradient(rgb(255, 143, 178) 0%, rgb(167, 151, 255) 50%, rgb(0, 229, 255) 100%)
  background-image url('https://imgs.search.brave.com/zj3k2zPlJ3WEAdBIUqPBcNwVdB9lmcK_NKEUCLKTK4A/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly93YWxs/cGFwZXJhY2Nlc3Mu/Y29tL2Z1bGwvODc4/ODUwNi5qcGc')
  background-size cover
  background-position center
  background-attachment fixed
  overflow-y auto
  border-radius 10px


.chat__message--container::after
  content ''
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.chat__message--receiver
  padding 1.5px
  text-align right

.chat__message--sender
  padding 1.5px
  text-align left

span
  display inline-flex
  padding 8px
  border-radius 10px

.chat__message--sender--msg
  background black

.chat__message--receiver--msg
  background black